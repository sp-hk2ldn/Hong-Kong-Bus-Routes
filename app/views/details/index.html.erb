<h1>Listing details</h1>

<table>
  <thead>
    <tr>
      <th>Stop number</th>
      <th>Stop name</th>
      <th>Stop location</th>
      <th>Area</th>
      <th>Adult price</th>
      <th>Child price</th>
      <th>Senior price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.stop_number %></td>
        <td><%= detail.stop_name %></td>
        <td><%= detail.stop_location %></td>
        <td><%= detail.area %></td>
        <td><%= detail.adult_price %></td>
        <td><%= detail.child_price %></td>
        <td><%= detail.senior_price %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

